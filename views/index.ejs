            </h1>
            <% }) %>
                <img src="public/img/coffeebeans.jpeg" alt="">
                <div class="container d-flex justify-content-center flex-wrap">
                    <% item.forEach(function (product){%>
                        <div class="card m-5" style="width: 18rem;">
                            <img src="<%=product.imgUrl %>" class="card-img-top" alt="..."></a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.name%>
                                        <h3 class="card-text">
                                            price:
                                            $<%= product.price%>
                                        </h3>
                                </h5>
